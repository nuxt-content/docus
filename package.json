{
  "name": "docus",
  "description": "Minimal Documentation theme and CLI for shared usage across Nuxt modules",
  "repository": {
    "type": "git",
    "url": "https://github.com/nuxtlabs/docus"
  },
  "private": false,
  "version": "3.0.0-alpha.0",
  "keywords": [],
  "license": "MIT",
  "bin": {
    "docus": "./dist/main.mjs"
  },
  "files": [
    "app",
    "dist",
    "!app/**/node_modules",
    "!app/**/.nuxt",
    "!app/**/tsconfig.json"
  ],
  "scripts": {
    "dev": "npm run docs:dev",
    "docs:dev": "NUXT_DOCS_DEV=1 npm run docus dev docs",
    "docs:build": "npm run docus build docs",
    "dev:prepare": "nuxi prepare app && nuxi prepare docs",
    "build": "tsup-node ./cli/main.ts --format esm",
    "docus": "tsx ./cli/main.ts",
    "test": "echo \"Error: no test specified\"",
    "lint": "eslint .",
    "release": "npm run lint && npm run test && npm run build && release-it"
  },
  "dependencies": {
    "@iconify-json/lucide": "^1.2.47",
    "@iconify-json/simple-icons": "^1.2.38",
    "@iconify-json/vscode-icons": "^1.2.22",
    "@nuxt/content": "https://pkg.pr.new/@nuxt/content@d98bf49",
    "@nuxt/image": "^1.10.0",
    "@nuxt/kit": "^3.17.5",
    "@nuxt/ui-pro": "^3.1.3",
    "@nuxtjs/robots": "^5.2.10",
    "c12": "^3.0.4",
    "citty": "^0.1.6",
    "dotenv": "^16.5.0",
    "git-url-parse": "^16.1.0",
    "minimark": "^0.2.0",
    "motion-v": "^1.2.1",
    "nuxi": "^3.25.1",
    "nuxt-llms": "^0.1.3",
    "nuxt-og-image": "^5.1.6",
    "pkg-types": "^2.1.0",
    "tailwindcss": "^4.1.8",
    "ufo": "^1.6.1",
    "unctx": "^2.4.1"
  },
  "devDependencies": {
    "@nuxt/eslint-config": "^1.4.1",
    "@release-it/conventional-changelog": "^10.0.1",
    "@stylistic/eslint-plugin": "^4.4.1",
    "@types/node": "^24.0.0",
    "@typescript-eslint/parser": "^8.34.0",
    "changelogen": "^0.6.1",
    "eslint": "^9.28.0",
    "release-it": "^19.0.3",
    "tsup": "^8.5.0",
    "tsx": "^4.19.4",
    "typescript": "^5.8.3"
  },
  "peerDependencies": {
    "better-sqlite3": "11.x",
    "nuxt": "3.x"
  },
  "packageManager": "pnpm@10.12.1"
}
